<div class="container">
  <div class="row">

    <div class="jumbotron">
      <h1>Eat-Da-Burger!</h1>
      <br>
      <img id="dbl-bgr" src="/assets/img/burger2.png" alt="burger" width="150" height="150">
    </div>

    <h2>Create 🍔 Your Burger!</h2>

    <form class="create-form">
      <div class="form-group">
        <textarea name="name" id="bgr" onkeyup="checkText()" cols="30" rows="1" placeholder="Enter your burger here"></textarea>
        <br><br>
        <button id="submit-btn" type="submit" disabled>ADD BURGER 🍔</button>
      </div>
    </form>

    <hr>
    <h2>Burger 🍽️ Served!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger-block devoured=false}}
      {{/unless}}
      {{/each}}
    </ul>

    <hr>
    <h2>Burgers 🗑️ Devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> eaten-block devoured=true}}
      {{/if}}
      {{/each}}
    </ul>
  
  </div>

  <footer class="row">
    <div class="col-lg">
      <p id="footer">©️ 2020 | Designed & built by Michelle McConville</p>
    </div>
  </footer>

</div>
