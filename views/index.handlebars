<div class="container">
  <div class="row">
    {{!-- <div class="col-lg"> --}}
      <h1>Eat-Da-Burger!</h1>
    {{!-- </div> --}}
  </div>

  <img src="../public/assets/img/burger2.png" alt="burger" width="300" height="300">

  <h2>Create Your Burger!</h2>

  <form class="create-form">
    <div class="form-group">
      <label for="bgr">Create Your Burger:</label>
      <input type="text" id="bgr" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burger-block devoured=false}}
    {{/unless}}
    {{/each}}
  </ul>

  <h2>Eat your Burger!</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burger-block devoured=true}}
    {{/if}}
    {{/each}}
  </ul>

  <button type="submit">Devour Burger!</button>

</div>
