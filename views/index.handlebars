<div class="container">
  <div class="row"></div>

  <div class="demo_wrap">
    <h1>Eat-Da-Burger!</h1>
  </div>

  {{!-- <img src="/assets/img/burger2.png" alt="burger" width="300" height="300"> --}}

  <h2>Create Your Burger!</h2>

  <form class="create-form">
    <div class="form-group">
      <label for="bgr">Create Your Burger:</label><br>
      <input type="text" id="bgr" name="name"><br>
      <button type="submit">Add Burger</button>
    </div>
  </form>

  <hr>
  <h2>Burger Served!</h2>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burger-block devoured=false}}
    {{/unless}}
    {{/each}}
  </ul>

 <hr>
 <h2>Burgers Eaten!</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> eaten-block devoured=true}}
    {{/if}}
    {{/each}}
  </ul>

</div>
